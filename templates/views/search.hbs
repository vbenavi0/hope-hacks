    <main>

      <h1 class="title1" data-translate="Resource Search">Resource Search</h1>
      <p class="intro" data-translate="Enter topic">Enter topic or keyword below to access curated healthcare resources.</p>

      <div class="card">
        <div class="card-content blue lighten-3">
          <p data-translate="Empower your health journey!">Empower your health journey! <br> Explore our wealth of knowledge by searching health articles based on keywords or topics. Your wellness, your way.</p>
        </div>
        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width blue lighten-2">
            <li class="tab"><a class="active blue-text text-darken-2" href="#test1" data-translate="Search by Keyword">Search by Keyword</a></li>
            <li class="tab"><a class="active blue-text text-darken-2" href="#test2" data-translate="Search by Category">Search by Category</a></li>
          </ul>
        </div>
        <div class="card-content blue-text text-darken-2">
          <div id="test1" class="tabOne">
            <div class="input-field col s12">

              <div class="row">
                <form class="col s12" id="topicSearchForm">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">search</i>
                      <input id="icon_prefix" type="text" class="validate">
                      <label for="icon_prefix" data-translate="Search Topic">Search Topic</label>
                    </div>
                  </div>
                  <button class="btn waves-effect waves-light blue darken-2" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                  </button>
                </form>
              </div>
            </div>
          </div>

          <div id="test2" class="tabTwo">
            <form class="input-field col s12" id="categorySearchForm">
              <select id="categories">
                <option id = 'choose' value="" disabled selected data-translate="Choose Category">Choose Category</option>
              </select>
              <label data-translate="Search by Category">Search by category</label>
              <button class="btn waves-effect waves-light blue darken-2" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
            </form>
          </div>
        </div>

      </div>


      <div id="searchResults">
        <h3 id="message1"></h3>
        <ul id="resultList"></ul>
        <p id="message2"></p>
      </div>



    </main>
  
